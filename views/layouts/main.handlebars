<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registry</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Roboto+Mono:wght@300&family=Roboto:wght@300&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Roboto+Mono:wght@300&display=swap"
      rel="stylesheet"
    />
    <link
      href="http://fonts.cdnfonts.com/css/lovelo?styles=25962"
      rel="stylesheet"
    />

    {{! <link rel="stylesheet" href="/css/jass.css"> }}
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>

    <header class="p-4 bg-transparent text-dark custom-header">
      <div class="container">
        <div
          class="d-flex flex-wrap align-items-center justify-content-between"
        >
          {{! <a
            href="/"
            class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none"
          >
          
            <svg
              class="bi me-2"
              width="40"
              height="32"
              role="img"
              aria-label="Bootstrap"
            ><use xlink:href="#bootstrap"></use></svg>
          </a> }}
          <div>
            <h2 class="text-white"><a href="#">Solo Traveller</a></h2>
          </div>

          <div class="text-end">
            {{! @TODO add conditional for displaying login/logout depending on whether logged_in set to true or false }}
            <a href="/homepage">
              <button
                type="button"
                class="navBtn"
              >Homepage</button>
            </a>

            {{#if logged_in}}
              <button
                type="button"
                class="navBtn"
                id="logout"
              >Logout</button>
            {{else}}
              <a href="/login-form"><button
                  type="button"
                  class="navBtn"
                >User Login</button></a>
            {{/if}}
            <a href="/company-login-form">
              <button
                type="button"
                class="navBtn"
              >Company Login</button>
            </a>
            {{#if isOwnAdmin}}
              <a href="/company-dashboard"><button
                  type="button"
                  class="navBtn"
                >Dashboard</button></a>
            {{/if}}
            {{#unless isOwnAdmin}}
              {{#if logged_in}}
                <a href="/dashboard"><button
                    type="button"
                    class="navBtn"
                  >Dashboard</button></a>
              {{/if}}
            {{/unless}}
          </div>
        </div>
      </div>
    </header>
    {{! <main class="container container-fluid mt-5"> }}
    <main class="image-bg p-5">
      {{{body}}}
    </main>
    <footer>

    </footer>

    <script src="/js/logout.js"></script>

  </body>

</html>