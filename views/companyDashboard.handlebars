<!-- Button trigger modal -->
<button type="button" class="genBtn" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Upload Image
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form action="/images/{{ id }}" method="POST" enctype="multipart/form-data" class="upload-form" data-id="{{id}}">
        <div class="input-group mb-3">
  <input type="file" name="myImage" class="form-control" id="image{{id}}">
  <label class="input-group-text" for="inputGroupFile02">Upload</label>
</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="genBtn" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="genBtn">Upload</button>
        </form>
      </div>
    </div>
  </div>
</div>
    <button data-id="{{trip.id}}" class="delete genBtn roboto">Delete</button>
    
      {{/if}}
    </div>
  <div class="col-4">
    <img src="{{img_src}}"></img>
  </div>
  </div>

{{/each}}

